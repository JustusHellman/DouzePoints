{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client"]
  },
  "include": [
    "index.tsx",
    "App.tsx",
    "components/**/*",
    "context/**/*",
    "data/**/*",
    "utils/**/*",
    "locales/**/*",
    "games/wordGame/EuroWordGame.tsx",
    "games/linksgame/EuroLinks.tsx",
    "games/guesser/EuroGuess.tsx",
    "games/arena/EuroArena.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "games/wordle",
    "games/links",
    "types.ts",
    "constants.tsx"
  ]
}